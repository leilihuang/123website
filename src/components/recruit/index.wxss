.recruit-box {
  background-color: #e3fffe;
}
.recruit-box .banner-box {
  width: 100%;
  background: url('images/recruit-banner1920x500.jpg') center no-repeat;
  background-size: cover;
}
.recruit-box .con-box {
  width: 1200px;
  margin: 0 auto;
}
.recruit-box .con-box img {
  display: inline-block;
  width: 100%;
  vertical-align: top;
}
.recruit-box .con-box .mt10 {
  margin-top: 10px;
}
.recruit-box .con-box .title-bg {
  margin-bottom: 48px;
  background: url('images/recruit-title-bg.png') no-repeat;
  width: 100%;
  height: 81px;
}
.recruit-box .con-box .title-text {
  font-family: SourceHanSansCN-Bold;
  font-size: 40px;
  font-weight: normal;
  font-stretch: normal;
  letter-spacing: 0px;
  color: #ffffff;
  text-align: center;
  line-height: 81px;
}
.recruit-box .con-box .g1,
.recruit-box .con-box .g3,
.recruit-box .con-box .g4 {
  background: #FFF;
}
.recruit-box .con-box .contact-wrap {
  position: relative;
  width: 100%;
  padding-bottom: 40px;
}
.recruit-box .con-box .contact-wrap .contact-info {
  margin: -20px auto 0px auto;
  width: 546px;
}
.recruit-box .con-box .contact-wrap .contact-info p {
  text-align: center;
  font-size: 20px;
}
.recruit-box .con-box .job-wrap {
  margin: 0px auto 32px auto;
  padding-top: 36px;
  width: 1040px;
  border-radius: 50px;
  border: 3px  dashed #58c3f2;
}
.recruit-box .con-box .job-wrap .work-block {
  display: flex;
  padding: 0px 20px;
}
.recruit-box .con-box .job-wrap .work-block .work-img-box {
  padding-top: 38px;
  width: 250px;
}
.recruit-box .con-box .job-wrap .work-block .work-info-box {
  flex: 1;
  margin-left: 12px;
}
.recruit-box .con-box .job-wrap .work-block .work-info-box .work-title {
  margin-bottom: 27px;
}
.recruit-box .con-box .job-wrap .work-block .work-info-box .work-info {
  margin-bottom: 27px;
  font-size: 20px;
  color: #313131;
  text-align: left;
}
.recruit-box .con-box .job-wrap .work-title-img {
  display: inline-block;
  width: 395px;
  vertical-align: top;
}
.recruit-box .con-box .job-wrap .demand-block {
  display: flex;
  padding: 15px 50px 37px 50px;
  width: 100%;
  background-color: #fff8b5;
  border-bottom-left-radius: 50px;
  border-bottom-right-radius: 50px;
}
.recruit-box .con-box .job-wrap .demand-block .demand-sen {
  padding-top: 10px;
  width: 321px;
}
.recruit-box .con-box .job-wrap .demand-block .demand-skill {
  flex: 1;
  margin-left: 60px;
}
.recruit-box .con-box .job-wrap .demand-block .demand-title {
  font-family: SourceHanSansCN-Bold;
  font-size: 24px;
  font-weight: normal;
  font-stretch: normal;
  letter-spacing: 0px;
  color: #313131;
}
.recruit-box .con-box .job-wrap .demand-block .demand-text {
  font-family: SourceHanSansCN-Regular;
  font-size: 18px;
  font-weight: normal;
  letter-spacing: 0px;
  color: #313131;
}
.recruit-box .con-box .job-wrap:last-child {
  margin-bottom: 0px;
}
